<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    >

    <com.younchen.younsampleproject.commons.widget.CircleImageView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/img_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_head"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="Password Setting" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_head"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="This options allows you setting password . in order to protect your app .to top missing it . forget is all yesterday bad morning"
        android:textSize="14sp" />

    <View
        android:background="#90000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="72dp"
        android:layout_height="1px"/>
</RelativeLayout>
